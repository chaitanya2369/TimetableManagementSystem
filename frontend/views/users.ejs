<!DOCTYPE html>
<html>
<head>
    <title>Admin - View Users</title>
    <link rel="stylesheet" type="text/css" href="/css/admin.css">
</head>
<body>
    <header>
        <div class="header">
            <div class="logo">
                <img src="/images/logo1.png" alt="Institution Logo">
            </div>
            <h1>Admin Dashboard</h1>
            <div class="login">
                <button><a href="/users/sign-out">Sign Out</a></button>
            </div>
        </div>
    </header>
    
    <main>
        <h1 id="name">Welcome, <%= user.name %>!</h1>

        <div class="sections">
            <!-- Students Section -->
            <section>
                <h3>Students</h3>
                <ul>
                    <% students.forEach(student => { %>
                        <li><%= student.name %> - <%= student.uniqueCode %></li>
                    <% }) %>
                </ul>
            </section>

            <!-- Teachers Section -->
            <section>
                <h3>Teachers</h3>
                <ul>
                    <% teachers.forEach(teacher => { %>
                        <li><%= teacher.name %> - <%= teacher.uniqueCode %></li>
                    <% }) %>
                </ul>
            </section>
        </div>
    </main>
    
    <footer>
        <div class="footer-content">
            <p>&copy; 2024 Indian Institute of Engineering Science and Technology, Shibpur. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
