<!DOCTYPE html>
<html>
  <head>
    <title>View Timetables</title>
    <link rel="stylesheet" type="text/css" href="/css/viewdepartment.css" />
  </head>
  <body>
    <header>
      <div class="header">
        <div class="logo">
          <img src="/images/logo1.png" alt="Institution Logo" />
        </div>
        <h1>Admin Dashboard</h1>
        <div class="login">
          <button><a href="/users/sign-out">Sign Out</a></button>
        </div>
      </div>
    </header>
    <main>
      <h1>View Timetables</h1>
      <div class="sections">
        <% departments.forEach(department => { %>
        <section>
          <h2><%= department %> Department</h2>
          <ul>
            <% years.forEach(year => { %>
            <li>
              <a href="/admin/timetables/<%= department %>/<%= year %>"
                >Year <%= year %></a
              >
            </li>
            <% }) %>
          </ul>
        </section>
        <% }) %>
      </div>
    </main>
    <footer>
      <div class="footer-content">
        <p>
          &copy; 2024 Indian Institute of Engineering Science and Technology,
          Shibpur. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
