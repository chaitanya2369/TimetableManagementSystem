<!DOCTYPE html>
<html>
<head>
    <title>Edit Timetable</title>
    <link rel="stylesheet" type="text/css" href="/css/admin.css">
</head>
<body>
    <header>
        <div class="header">
            <div class="logo">
                <img src="/images/logo1.png" alt="Institution Logo">
            </div>
            <h1>Admin Dashboard</h1>
            <div class="login">
                <button><a href="/users/sign-out">Sign Out</a></button>
            </div>
        </div>
    </header>
    <main>
        <h1>Edit Timetable</h1>
        <form action="/admin/timetables/<%= timetable._id %>/edit" method="post">
            <label>Department:</label>
            <input type="text" name="department" value="<%= timetable.department %>" required><br>
            <label>Year:</label>
            <input type="text" name="year" value="<%= timetable.year %>" required><br>
            <div id="timeSlots">
                <% timetable.timeSlots.forEach((slot, index) => { %>
                    <div class="timeSlot">
                        <label>Start Time:</label>
                        <input type="text" name="timeSlots[<%= index %>][startTime]" value="<%= slot.startTime %>" required><br>
                        <label>End Time:</label>
                        <input type="text" name="timeSlots[<%= index %>][endTime]" value="<%= slot.endTime %>" required><br>
                        <label>Subject:</label>
                        <input type="text" name="timeSlots[<%= index %>][subject]" value="<%= slot.subject %>" required><br>
                        <label>Teacher:</label>
                        <input type="text" name="timeSlots[<%= index %>][teacher]" value="<%= slot.teacher %>" required><br>
                    </div>
                <% }) %>
            </div>
            <button type="button" onclick="addTimeSlot()">Add Time Slot</button><br>
            <button type="submit">Save Changes</button>
        </form>
    </main>
    <footer>
        <div class="footer-content">
            <p>&copy; 2024 Indian Institute of Engineering Science and Technology, Shibpur. All rights reserved.</p>
        </div>
    </footer>
