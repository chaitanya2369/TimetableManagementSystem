<!DOCTYPE html>
<html>
<head>
    <title>Student Dashboard</title>
    <link rel="stylesheet" type="text/css" href="/css/student.css" />
</head>
<body>
    <div class="container">
        <header>
            <div class="header">
                <div class="logo">
                    <img src="/images/logo1.png" alt="Institution Logo" />
                </div>
                <h1>Student Dashboard</h1>
                <div class="login">
                    <button><a href="/users/sign-out">Sign Out</a></button>
                </div>
            </div>
        </header>
        <main>
            <h1 id="name">Welcome, <%= user.name %>!</h1>
            <div class="sections">
                <!-- Timetable Section -->
                <section>
                    <h3>Timetable</h3>
                    <ul>
                        <li><a href="/students/timetables">View Timetables</a></li>
                        <li><a href="/students/timetables/upcoming">Upcoming Classes</a></li>
                    </ul>
                </section>

                <!-- Assignments Section -->
                <section>
                    <h3>Assignments</h3>
                    <ul>
                        <li><a href="/students/assignments">View Assignments</a></li>
                        <li><a href="/students/assignments/submit">Submit Assignment</a></li>
                    </ul>
                </section>

                <!-- Notifications Section -->
                <section>
                    <h3>Notifications</h3>
                    <ul>
                        <li><a href="/students/notifications">View Notifications</a></li>
                        <li><a href="/students/messages">View Messages</a></li>
                    </ul>
                </section>

                <!-- Profile Section -->
                <section>
                    <h3>Profile</h3>
                    <ul>
                        <li><a href="/students/profile">View Profile</a></li>
                        <li><a href="/students/profile/edit">Edit Profile</a></li>
                    </ul>
                </section>
            </div>
        </main>
        <footer>
            <div class="footer-content">
                <p>&copy; 2024 Indian Institute of Engineering Science and Technology, Shibpur. All rights reserved.</p>
            </div>
        </footer>
    </div>
</body>
</html>
